<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragment.MenuAddFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mainLogo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:src="@drawable/logo" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/menuImageUpdate"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:civ_border_color="@color/blue_logo"
            app:civ_border_width="3dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <Button
            android:id="@+id/changeMenuImageButton"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="@string/change"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="6dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/menuName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:hint="Menu Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/menuNameUpdateEditText"
                android:layout_width="270dp"
                android:layout_height="55dp"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ListView
            android:id="@+id/meatListViewUpdate"
            android:layout_width="380dp"
            android:layout_height="150dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/border"
            android:dividerHeight="4dp"
            android:scrollbarSize="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/meatMenu"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="270dp"
                android:layout_height="75dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:hint="Meat">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/meatMenuUpdateEditText"
                    android:layout_width="270dp"
                    android:layout_height="55dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/vegetableListViewUpdate"
            android:layout_width="380dp"
            android:layout_height="150dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/border"
            android:dividerHeight="4dp"
            android:scrollbarSize="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/vegetableMenu"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="270dp"
                android:layout_height="75dp"
                android:layout_marginRight="20dp"
                android:hint="Vegetable">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/vegetableMenuUpdateEditText"
                    android:layout_width="270dp"
                    android:layout_height="55dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/bothListViewUpdate"
            android:layout_width="380dp"
            android:layout_height="150dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/border"
            android:dividerHeight="4dp"
            android:scrollbarSize="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bothMenu"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="270dp"
                android:layout_height="75dp"
                android:layout_marginRight="20dp"
                android:hint="Vegetable And Meat">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bothMenuUpdateEditText"
                    android:layout_width="270dp"
                    android:layout_height="55dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/okButtonMenuUpdate"
                    android:layout_width="100dp"
                    android:layout_height="55dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50dp"
                    android:text="Ok"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/cancelButtonMenuUpdate"
                    android:layout_width="100dp"
                    android:layout_height="55dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:text="Cancel"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/updateMenuButton"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:text="Update"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>